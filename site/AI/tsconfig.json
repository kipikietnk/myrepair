    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./scripts",
        "rootDir": "./src"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}